{
  "name": "recipe-share",
  "version": "1.0.0",
  "description": "Recipe sharing service - Monorepo",
  "private": true,
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:web": "pnpm --filter @recipe-share/web dev",
    "dev:api": "pnpm --filter @recipe-share/api dev",
    "build": "pnpm -r build",
    "build:web": "pnpm --filter @recipe-share/web build",
    "build:api": "pnpm --filter @recipe-share/api build",
    "start": "pnpm -r --parallel start",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "test:api": "pnpm --filter @recipe-share/api test",
    "test:web": "pnpm --filter @recipe-share/web test",
    "test:cov": "pnpm -r test:cov",
    "test:cov:api": "pnpm --filter @recipe-share/api test:cov",
    "test:cov:web": "pnpm --filter @recipe-share/web test:cov",
    "test:e2e": "pnpm --filter @recipe-share/e2e test",
    "test:e2e:headed": "pnpm --filter @recipe-share/e2e test:headed",
    "test:e2e:ui": "pnpm --filter @recipe-share/e2e test:ui",
    "test:all": "pnpm test && pnpm test:e2e",
    "db:up": "docker compose up -d postgres redis",
    "db:down": "docker compose down",
    "db:migrate": "pnpm --filter @recipe-share/api db:migrate",
    "db:seed": "pnpm --filter @recipe-share/api db:seed",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "prepare": "husky",
    "docker:dev": "DOCKER_BUILDKIT=1 docker compose -f docker-compose.dev.yml up",
    "docker:dev:build": "DOCKER_BUILDKIT=1 COMPOSE_DOCKER_CLI_BUILD=1 docker compose -f docker-compose.dev.yml up --build",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "docker:dev:logs:api": "docker compose -f docker-compose.dev.yml logs -f api",
    "docker:dev:logs:web": "docker compose -f docker-compose.dev.yml logs -f web",
    "docker:dev:clean": "docker compose -f docker-compose.dev.yml down -v --rmi local",
    "docker:dev:restart": "docker compose -f docker-compose.dev.yml restart",
    "docker:prod": "DOCKER_BUILDKIT=1 docker compose -f docker-compose.prod.yml --env-file .env.production up -d",
    "docker:prod:build": "DOCKER_BUILDKIT=1 COMPOSE_DOCKER_CLI_BUILD=1 docker compose -f docker-compose.prod.yml --env-file .env.production up -d --build",
    "docker:prod:down": "docker compose -f docker-compose.prod.yml --env-file .env.production down",
    "docker:prod:logs": "docker compose -f docker-compose.prod.yml logs -f",
    "docker:prod:ps": "docker compose -f docker-compose.prod.yml ps",
    "docker:prod:clean": "docker compose -f docker-compose.prod.yml --env-file .env.production down -v --rmi all",
    "docker:prune": "docker system prune -f && docker volume prune -f",
    "k8s:build": "DOCKER_BUILDKIT=1 docker build -t recipe-share-api:latest -f docker/api/Dockerfile.prod . && DOCKER_BUILDKIT=1 docker build -t recipe-share-web:latest -f docker/web/Dockerfile.prod .",
    "k8s:deploy": "kubectl apply -k k8s/overlays/local",
    "k8s:delete": "kubectl delete -k k8s/overlays/local",
    "k8s:status": "kubectl get all -n recipe-share",
    "k8s:logs:api": "kubectl logs -f deployment/api -n recipe-share",
    "k8s:logs:web": "kubectl logs -f deployment/web -n recipe-share"
  },
  "keywords": [
    "recipe",
    "sharing",
    "nextjs",
    "nestjs",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "overrides": {
      "glob": ">=10.5.0",
      "tar": ">=7.5.7",
      "js-yaml": ">=4.1.1",
      "lodash": ">=4.17.23",
      "tmp": ">=0.2.4"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1"
  },
  "lint-staged": {
    "apps/web/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "apps/api/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
